<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_effectiveness_calculator" dir="ctrl">
  <doc>
    <description>
      Function which calculates the control effectiveness matrix on the fly
      depending on the current actuator states.
    </description>
  </doc>
  <settings>
  	<dl_settings>
      <dl_settings NAME="Ctrl Eff Calc">
        <dl_setting var="ce_pitch_a" min="0.0001" step="0.0001" max="0.01" shortname="ce_pitch_a"/>
        <dl_setting var="ce_pitch_b" min="0.0" step="0.0001" max="0.1" shortname="ce_pitch_b"/>
        <dl_setting var="ce_yaw_a" min="0.0" step="0.0001" max="0.1" shortname="ce_yaw_b"/>
        <dl_setting var="ce_yaw_b" min="0.0" step="0.05" max="1.0" shortname="ce_yaw_a"/>
  			<dl_setting var="mass_property.mass" min="0.35" step="0.01" max="0.42" shortname="mass" param="MASS"/>
  			<dl_setting var="mass_property.I_xx" min="0.000526" step="0.0001" max="0.07" shortname="I_xx" param="I_XX"/>
  			<dl_setting var="mass_property.I_yy" min="0.0001" step="0.0001" max="0.03" shortname="I_yy" param="I_YY"/>
  			<dl_setting var="mass_property.I_zz" min="0.000364" step="0.0001" max="0.05" shortname="I_zz" param="I_ZZ"/>
  		</dl_settings>
  	</dl_settings>
  </settings>
  <header>
    <file name="ctrl_effectiveness_calculator.h"/>
  </header>
  <periodic fun="ctrl_eff_periodic()" freq="500"/>
  <makefile>
    <file name="ctrl_effectiveness_calculator.c"/>
  </makefile>
</module>
